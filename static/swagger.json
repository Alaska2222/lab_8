        "type": "object",
        "properties": {
          "GroupId": {
            "type": "integer",
            "minimum": 214,
            "maximum": 217,
            "example": 216
          },
          "Quantity": {
            "type": "integer"
          },
          "Students": {
            "type": "array",
            "items": {
